{
  "manifest_version": 4,
  "name": "YouTube Music Volume Control",
  "version": "1.2",
  "description": "Improves volume control for YouTube Music with finer adjustments at lower volumes",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["*://music.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://music.youtube.com/*"],
      "css": ["volumeControl.css"],
      "js": ["volumeControlUI.js", "content.js"]
    }
  ]
}
